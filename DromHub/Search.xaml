<Page
    x:Class="DromHub.Search"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DromHub">
    <Page.Resources>
        <local:DoubleToStringConverter x:Key="DoubleToStringConverter" />
        
    </Page.Resources>
    <StackPanel Padding="20" Background="LightBlue" Spacing="10">
        <TextBlock Text="Поиск деталей:" FontSize="20"/>

        <StackPanel Orientation="Horizontal" Spacing="10">
            <TextBox x:Name="SearchBox"
                 Width="300"
                 PlaceholderText="Введите бренд или номер..."
                 TextChanged="SearchBox_TextChanged"/>
            <Button Content="Показать" Click="ShowButton_Click"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Spacing="10" Margin="0,10,0,0">
            <TextBlock Text="Бренд" Width="100" FontWeight="Bold" />
            <TextBlock Text="Номер" Width="100" FontWeight="Bold" />
            <TextBlock Text="Название" Width="150" FontWeight="Bold" />
            <TextBlock Text="Артикул" Width="100" FontWeight="Bold" />
            <TextBlock Text="Поставщик" Width="150" FontWeight="Bold" />
            <TextBlock Text="Количество" Width="80" FontWeight="Bold" TextAlignment="Right" />
            <TextBlock Text="Цена" Width="80" FontWeight="Bold" TextAlignment="Right" />
        </StackPanel>

        <ListView x:Name="ResultsList" Height="300">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <TextBlock Text="{Binding Brand}" Width="100"/>
                        <TextBlock Text="{Binding Number}" Width="100"/>
                        <TextBlock Text="{Binding Name}" Width="150"/>
                        <TextBlock Text="{Binding Article}" Width="100"/>
                        <TextBlock Text="{Binding Supplier}" Width="150"/>
                        <TextBlock Text="{Binding Qty}" Width="80" TextAlignment="Right"/>
                        <TextBlock Text="{Binding Price, Converter={StaticResource DoubleToStringConverter}}" Width="80" TextAlignment="Right"/>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackPanel>
</Page>
