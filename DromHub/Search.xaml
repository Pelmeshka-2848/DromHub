<Page
    x:Class="DromHub.Search"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <StackPanel Padding="20" Background="LightBlue" Spacing="10">

        <TextBlock Text="Поиск:" FontSize="20"/>

        <StackPanel Orientation="Horizontal" Spacing="10">
            <TextBox x:Name="SearchBox"
                     Width="300"
                     PlaceholderText="Введите текст для поиска..."
                     TextChanged="SearchBox_TextChanged"/>

            <Button Content="Показать"
                    Click="ShowButton_Click"/>
        </StackPanel>

        <TextBlock x:Name="SearchResultTextBlock"
                   FontSize="18"
                   Foreground="DarkBlue"
                   TextWrapping="Wrap"
                   Margin="0,30,0,0"
                   HorizontalAlignment="Center"/>
    </StackPanel>
</Page>
