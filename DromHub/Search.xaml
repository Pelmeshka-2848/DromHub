<Page
    x:Class="DromHub.Search"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <StackPanel Padding="20" Background="LightBlue" Spacing="10">

        <TextBlock Text="Поиск деталей:" FontSize="20"/>

        <StackPanel Orientation="Horizontal" Spacing="10">
            <TextBox x:Name="SearchBox"
                     Width="300"
                     PlaceholderText="Введите бренд или номер..."
                     TextChanged="SearchBox_TextChanged"/>
            <Button Content="Показать" Click="ShowButton_Click"/>
        </StackPanel>

        <ListView x:Name="ResultsList" Height="300">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" Spacing="20">
                        <TextBlock Text="{Binding Brand}" Width="100"/>
                        <TextBlock Text="{Binding Number}" Width="100"/>
                        <TextBlock Text="{Binding Price}" Width="100"/>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

    </StackPanel>
</Page>