<Window
    x:Class="DromHub.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls"
    Title="DromHub">

    <Grid>
        <Grid.ColumnDefinitions>
            <!-- Основная область для вкладок -->
            <ColumnDefinition Width="*" />
            <!-- Правая панель с кнопками фиксированной ширины -->
            <ColumnDefinition Width="220" />
        </Grid.ColumnDefinitions>

        <!-- Вкладки -->
        <controls:TabView x:Name="MainTabView"
                          Grid.Column="0"
                          TabCloseRequested="MainTabView_TabCloseRequested"/>

        <!-- Правая панель с кнопками -->
        <StackPanel Grid.Column="1" Background="#EEE" Padding="15" Spacing="10">
            <Button Content="Поиск" Click="OpenSearch_Click"/>
            <Button Content="Просмотр" Click="OpenPartView_Click"/>
            <Button Content="Вкладка 3" Click="OpenTab3_Click"/>
            <Button Content="Вкладка 4" Click="OpenTab4_Click"/>
        </StackPanel>
    </Grid>
</Window>
