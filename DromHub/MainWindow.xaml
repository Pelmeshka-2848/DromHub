<Window
    x:Class="DromHub.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls"
    Title="DromHub">

    <NavigationView
        x:Name="nvSample"
        AlwaysShowHeader="True"
        ExpandedModeThresholdWidth="500"
        IsBackButtonVisible="Collapsed"
        IsBackEnabled="False"
        IsSettingsVisible="True"
        IsTabStop="False"
        ItemInvoked="NavigationView_ItemInvoked"
        PaneDisplayMode="Left"
        PaneTitle="DromHub"
        SelectionChanged="NavigationView_SelectionChanged"
        SelectionFollowsFocus="Disabled">

        <NavigationView.MenuItems>
            <!--  Главная  -->
            <NavigationViewItem
                x:Name="MainPageItem"
                Content="Главная"
                SelectsOnInvoked="True"
                Tag="MainPage">
                <NavigationViewItem.Icon>
                    <SymbolIcon Symbol="Home" />
                </NavigationViewItem.Icon>
            </NavigationViewItem>

            <!--  Запчасти  -->
            <NavigationViewItem
                x:Name="PartPageItem"
                Content="Запчасть"
                Tag="PartPage">
                <NavigationViewItem.Icon>
                    <SymbolIcon Symbol="Repair" />
                </NavigationViewItem.Icon>
                <NavigationViewItem.MenuItems>
                    <NavigationViewItem
                        x:Name="PartSearchPageItem"
                        Content="Поиск"
                        SelectsOnInvoked="True"
                        Tag="PartSearchPage" />
                    <NavigationViewItem
                        x:Name="PartChangesPageItem"
                        Content="Изменения"
                        SelectsOnInvoked="True"
                        Tag="PartChangesPage" />
                </NavigationViewItem.MenuItems>
            </NavigationViewItem>

            <!--  Бренды  -->
            <NavigationViewItem
                x:Name="BrandsRootItem"
                Content="Бренды"
                Tag="BrandsRoot">
                <NavigationViewItem.Icon>
                    <SymbolIcon Symbol="Library" />
                </NavigationViewItem.Icon>
                <NavigationViewItem.MenuItems>
                    <NavigationViewItem
                        x:Name="BrandsOverviewPageItem"
                        Content="Обзор"
                        SelectsOnInvoked="True"
                        Tag="BrandsOverviewPage" />
                    <NavigationViewItem
                        x:Name="BrandsListPageItem"
                        Content="Список"
                        SelectsOnInvoked="True"
                        Tag="BrandsListPage" />
                    <NavigationViewItem
                        x:Name="BrandMergePageItem"
                        Content="Слияние"
                        SelectsOnInvoked="True"
                        Tag="BrandMergePage" />
                </NavigationViewItem.MenuItems>
            </NavigationViewItem>

            <!-- Парсер почты -->
            <NavigationViewItem
                x:Name="MailParserPageItem"
                Content="Парсер почты"
                SelectsOnInvoked="True"
                Tag="MailParserView">
                <NavigationViewItem.Icon>
                    <SymbolIcon Symbol="Mail" />
                </NavigationViewItem.Icon>
            </NavigationViewItem>

            <!--  Корзина  -->
            <NavigationViewItem
                x:Name="CartNavItem"
                Content="Корзина"
                Tag="CartPage">
                <NavigationViewItem.Icon>
                    <SymbolIcon Symbol="Shop" />
                </NavigationViewItem.Icon>
            </NavigationViewItem>
        </NavigationView.MenuItems>

        <NavigationView.AutoSuggestBox>
            <AutoSuggestBox AutomationProperties.Name="Search" QueryIcon="Find" />
        </NavigationView.AutoSuggestBox>

        <Frame x:Name="contentFrame" />
    </NavigationView>
</Window>