<Window
    x:Class="DromHub.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls"
    Title="DromHub">

    <controls:TabView x:Name="MainTabView"
                      TabCloseRequested="MainTabView_TabCloseRequested">
        <controls:TabViewItem Header="Главная" IsClosable="False">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="10">
                <Button Content="Поиск" Click="OpenSearch_Click"/>
                <Button Content="Открыть вкладку 2" Click="OpenTab2_Click"/>
                <Button Content="Открыть вкладку 3" Click="OpenTab3_Click"/>
                <Button Content="Открыть вкладку 4" Click="OpenTab4_Click"/>
            </StackPanel>
        </controls:TabViewItem>

    </controls:TabView>
</Window>
