<ContentDialog
    x:Class="DromHub.Views.DeleteBrandDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Удаление бренда"
    PrimaryButtonText="Удалить"
    CloseButtonText="Отмена">
    <!-- Убрал PrimaryButtonStyle -->

    <StackPanel Spacing="10">
        <TextBlock Text="Вы уверены, что хотите удалить этот бренд?"/>
        <TextBlock 
            x:Name="BrandNameText"
            FontWeight="Bold"
            FontSize="16"/>
        <TextBlock 
            x:Name="WarningText"
            Foreground="Red"
            TextWrapping="Wrap"
            Text="Внимание: Это действие нельзя отменить!"/>
    </StackPanel>
</ContentDialog>