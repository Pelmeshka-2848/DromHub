<ContentDialog
    x:Class="DromHub.Views.AddAliasDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Добавить синоним"
    PrimaryButtonText="Сохранить"
    CloseButtonText="Отмена">

    <StackPanel Spacing="12" Padding="8">
        <TextBox
            x:Name="AliasTextBox"
            PlaceholderText="Введите синоним"
            Text="{x:Bind AliasName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
    </StackPanel>
</ContentDialog>
