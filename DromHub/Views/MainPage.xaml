<Page
    x:Class="DromHub.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <StackPanel Grid.Row="0" 
                    Orientation="Horizontal" 
                    Padding="20">
            <SymbolIcon Symbol="Home" Margin="0,0,10,0"/>
            <TextBlock Text="Главная страница" 
                       FontSize="20"
                       VerticalAlignment="Center"/>
        </StackPanel>

        <!-- Основное содержимое -->
        <ScrollViewer Grid.Row="1" 
                      Padding="20"
                      VerticalScrollBarVisibility="Auto">
            <StackPanel Spacing="20">
                <TextBlock Text="Добро пожаловать в DromHub"
                           FontSize="24"
                           FontWeight="SemiBold"/>

                <controls:CalendarDatePicker 
                    Header="Выберите дату"
                    Width="300"/>

                <!-- Быстрые действия -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                </Grid>

                <!-- Статистика -->
                <Border Padding="15"
                        CornerRadius="5">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Всего запчастей"
                                       Style="{ThemeResource CaptionTextBlockStyle}"/>
                            <TextBlock x:Name="TotalPartsText"
                                       Text="0"
                                       FontSize="28"
                                       FontWeight="Bold"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Новых сегодня"
                                       Style="{ThemeResource CaptionTextBlockStyle}"/>
                            <TextBlock x:Name="NewTodayText"
                                       Text="0"
                                       FontSize="28"
                                       FontWeight="Bold"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Последнее обновление"
                                       Style="{ThemeResource CaptionTextBlockStyle}"/>
                            <TextBlock x:Name="LastUpdateText"
                                       Text="Нет данных"
                                       FontSize="28"
                                       FontWeight="Bold"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Последние добавленные -->
                <StackPanel>
                    <TextBlock Text="Последние добавленные запчасти"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Margin="0,0,0,10"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>