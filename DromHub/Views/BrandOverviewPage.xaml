<Page
    x:Class="DromHub.Views.BrandOverviewPage"
    x:Name="PageRoot"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <x:String x:Key="CoverageHint">Доля бренда по числу деталей среди всех брендов.</x:String>

        <!-- Горизонтальный “hairline”: прозрачные края → лёгкий центр -->
        <LinearGradientBrush x:Key="SoftDividerHBrush" StartPoint="0,0" EndPoint="1,0">
            <GradientStop Color="#00000000" Offset="0.0"/>
            <GradientStop Color="#33000000" Offset="0.5"/>
            <GradientStop Color="#00000000" Offset="1.0"/>
        </LinearGradientBrush>

        <!-- Вертикальный -->
        <LinearGradientBrush x:Key="SoftDividerVBrush" StartPoint="0,0" EndPoint="0,1">
            <!-- верх -->
            <GradientStop Color="#33000000" Offset="0.00"/>
            <GradientStop Color="#33000000" Offset="0.06"/>

            <!-- середина однотонная -->
            <GradientStop Color="#33000000" Offset="0.50"/>

            <!-- низ -->
            <GradientStop Color="#33000000" Offset="0.94"/>
            <GradientStop Color="#33000000" Offset="1.00"/>
        </LinearGradientBrush>


        <!-- Удобные стили для 1-px линий -->
        <Style x:Key="HairlineH" TargetType="Rectangle">
            <Setter Property="Height" Value="1"/>
            <Setter Property="Fill" Value="{ThemeResource SoftDividerHBrush}"/>
            <Setter Property="IsHitTestVisible" Value="False"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="HairlineV" TargetType="Rectangle">
            <Setter Property="Width" Value="1"/>
            <Setter Property="Fill" Value="{ThemeResource SoftDividerVBrush}"/>
            <Setter Property="IsHitTestVisible" Value="False"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

    </Page.Resources>

    <ScrollViewer Padding="20" VerticalScrollBarVisibility="Auto">
        <Grid ColumnSpacing="24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- ===== ЛЕВЫЙ СТОЛБЕЦ ===== -->
            <StackPanel Grid.Column="0" Spacing="4" Orientation="Vertical">

                    <TextBlock Text="{Binding BrandNameUpper}"
                               FontFamily="{StaticResource SFPro}"
                               Style="{ThemeResource DisplayTextBlockStyle}"
                               VerticalAlignment="Center"/>

                    <!-- Лента под заголовком -->
                <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                    <!-- Избранное -->
                    <ToggleButton x:Name="FavButton"
                                  IsChecked="{Binding IsFavorite, Mode=TwoWay}"
                                  Background="Transparent"
                                  BorderThickness="0"
                                  Padding="0">
                        <ImageIcon Source="/Assets/star.svg" Height="36"/>
                        <ToolTipService.ToolTip>
                            <ToolTip Content="Избранное"/>
                        </ToolTipService.ToolTip>
                    </ToggleButton>

                    <!-- Популярность -->
                    <StackPanel Orientation="Horizontal" Spacing="2">
                        <ImageIcon Source="/Assets/diamond.fill.svg" Height="20"/>
                        <ImageIcon Source="/Assets/diamond.fill.svg" Height="20"/>
                        <ImageIcon Source="/Assets/diamond.svg" Height="20"/>
                    </StackPanel>

                    <!-- Тип OEM/Аналог -->
                    <StackPanel Orientation="Horizontal" Spacing="4">
                        <TextBlock Text="ТИП ПРОИЗВОДИТЕЛЯ:" FontFamily="{StaticResource SFPro}" Style="{ThemeResource BodyTextBlockStyle}" VerticalAlignment="Center"/>
                        <ImageIcon Source="/Assets/car.svg" Height="20"/>
                    </StackPanel>

                    <!-- Метки -->
                    <StackPanel Orientation="Horizontal" Spacing="4">
                        <TextBlock Text="МЕТКИ:" FontFamily="{StaticResource SFPro}" Style="{ThemeResource BodyTextBlockStyle}" VerticalAlignment="Center"/>
                        <ImageIcon Source="/Assets/oilcan.svg" Height="20"/>
                        <ImageIcon Source="/Assets/steeringwheel.svg" Height="20"/>
                        <ImageIcon Source="/Assets/suspension.shock.svg" Height="20"/>
                        <ImageIcon Source="/Assets/pedal.brake.svg" Height="20"/>
                        <ImageIcon Source="/Assets/minus.plus.batteryblock.svg" Height="20"/>
                        <ImageIcon Source="/Assets/headlight.high.beam.svg" Height="20"/>
                    </StackPanel>
                </StackPanel>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="3*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- ЛИНИИ (вместо Borders) -->
                    <!-- верхняя горизонтальная -->
                    <Rectangle Style="{StaticResource HairlineH}"
                               Grid.Row="0" Grid.ColumnSpan="3"
                               VerticalAlignment="Bottom"/>

                    <!-- нижняя горизонтальная -->
                    <Rectangle Style="{StaticResource HairlineH}"
                               Grid.Row="2" Grid.ColumnSpan="3"
                               VerticalAlignment="Top"/>

                    <!-- центральная вертикальная между колонками -->
                    <Rectangle Style="{StaticResource HairlineV}"
                               Grid.Column="1" Grid.RowSpan="3"/>

                    <!-- ТВОИ СЕКЦИИ (как просил: вернуть StackPanel) -->
                    <StackPanel Grid.Column="0" Grid.Row="1" Orientation="Vertical" Spacing="4" Margin="0 10 0 10">
                        <TextBlock Text="АССОРТИМЕНТ:" FontFamily="{StaticResource SFPro}"
                                   Style="{ThemeResource BodyTextBlockStyle}"
                                   VerticalAlignment="Center"/>
                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <ImageIcon Source="/Assets/square.stack.3d.up.svg" Height="28"/>
                            <TextBlock Text="20% + 2.2" FontFamily="{StaticResource SFPro}"
                                       Style="{ThemeResource SubtitleTextBlockStyle}"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <TextBlock Text="УЗНАВАЕМОСТЬ:" FontFamily="{StaticResource SFPro}"
                                   Style="{ThemeResource BodyTextBlockStyle}"
                                   VerticalAlignment="Center"/>
                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <ImageIcon Source="/Assets/tag.svg" Height="28"/>
                            <TextBlock Text="10% + 0.5" FontFamily="{StaticResource SFPro}"
                                       Style="{ThemeResource SubtitleTextBlockStyle}"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <TextBlock Text="МАРЖИНАЛЬНОСТЬ:" FontFamily="{StaticResource SFPro}"
                                   Style="{ThemeResource BodyTextBlockStyle}"
                                   VerticalAlignment="Center"/>
                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <ImageIcon Source="/Assets/chart.line.uptrend.xyaxis.svg" Height="28"/>
                            <TextBlock Text="30% + 5.1" FontFamily="{StaticResource SFPro}"
                                       Style="{ThemeResource SubtitleTextBlockStyle}"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Grid.Column="2" Grid.Row="1">
                        <TextBlock Text="МЕТКИ:" FontFamily="{StaticResource SFPro}"
                                   Style="{ThemeResource CaptionTextBlockStyle}"
                                   VerticalAlignment="Center"/>
                        <!-- …твой контент… -->
                    </StackPanel>
                </Grid>
            </StackPanel>

            <!-- ===== ЦЕНТР ===== -->
            <Grid Grid.Column="1">

                <!-- Монограмма -->
                <TextBlock Text="{Binding Monogram}"
                           Opacity="0.06"
                           FontSize="220"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Grid>

            <!-- ===== ПРАВЫЙ СТОЛБЕЦ ===== -->
            <StackPanel Grid.Column="2" Spacing="16">
                <TextBlock Text="О БРЕНДЕ" Style="{ThemeResource SubtitleTextBlockStyle}"/>
                <TextBlock TextWrapping="WrapWholeWords"
                           Opacity="0.85"
                           Text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Integer viverra, erat eu vehicula tempus, augue elit cursus justo, vitae iaculis neque nibh at arcu. Curabitur laoreet dui at dui porta, non tempus purus feugiat."/>
                <TextBlock Text="Резерв под будущие данные"
                           Style="{ThemeResource CaptionTextBlockStyle}"/>
            </StackPanel>

        </Grid>
    </ScrollViewer>
</Page>